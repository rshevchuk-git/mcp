  "parameters": {
    "instance_id": {
      "type": "string",
      "required": true,
      "default": null,
      "description": "RDS instance identifier"
    },
    "snapshot_suffix": {
      "type": "string",
      "required": false,
      "default": "poc-snapshot",
      "description": "Suffix to add to the snapshot name"
    }
  },
  "execution_plan": [
    {
      "step_id": "validate_instance",
      "type": "command",
      "timeout": 60,
      "intent": "describe RDS instance to verify it exists",
      "context": {
        "service": "rds",
        "instance_id": "${params.instance_id}"
      }
    },
    {
      "step_id": "create_snapshot",
      "type": "command",
      "timeout": 120,
      "intent": "create RDS snapshot for database instance",
      "context": {
        "service": "rds",
        "instance_id": "${params.instance_id}",
        "snapshot_id": "${params.instance_id}-${params.snapshot_suffix}"
      },
      "depends_on": [
        "validate_instance"
      ]
    }
  ],
  "required_permissions": [
    "rds:DescribeDBInstances",
    "rds:CreateDBSnapshot"
